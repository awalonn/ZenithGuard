{
  "manifest_version": 3,
  "name": "ZenithGuard",
  "version": "2.1.0",
  "description": "Advanced AI-powered Ad Blocker and Privacy Guard",
  "default_locale": "en",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "scripting",
    "activeTab",
    "tabs",
    "alarms",
    "webRequest",
    "webNavigation",
    "cookies",
    "contextMenus",
    "browsingData"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/pages/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "toggle-zapper": {
      "suggested_key": {
        "default": "Alt+Shift+Z",
        "mac": "Alt+Shift+Z"
      },
      "description": "Activate/Deactivate Element Zapper"
    },
    "open-logger": {
      "suggested_key": {
        "default": "Alt+Shift+L",
        "mac": "Alt+Shift+L"
      },
      "description": "Open Network Logger"
    },
    "open-settings": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Open Dashboard/Settings"
    }
  },
  "options_page": "src/pages/settings.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "css/content.css",
        "css/theme.css",
        "src/pages/analyzer.html",
        "src/pages/logger.html",
        "js/yt_interceptor.js",
        "js/content/inspector.js",
        "js/content/zapper.js",
        "js/content/ai_hider.js",
        "js/policy_finder.js",
        "js/utils/toast.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css/content.css",
        "css/toast.css"
      ],
      "js": [
        "js/content_bundle.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "easylist",
        "enabled": true,
        "path": "rulesets/easylist.json"
      },
      {
        "id": "easyprivacy",
        "enabled": true,
        "path": "rulesets/easyprivacy.json"
      },
      {
        "id": "annoyances",
        "enabled": true,
        "path": "rulesets/annoyances.json"
      },
      {
        "id": "youtube",
        "enabled": true,
        "path": "rulesets/youtube.json"
      }
    ]
  }
}